<img src="/public/assets/img/burger.png">

<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}} {{#unless devoured}}

    <div class="burger">

        <p>{{this.id}}</p>
        <p>{{this.burger_name}}</p>

    </div>

    <button data-id="{{this.id}}" class="devourBurger">Devour it!</button>

    {{/unless}} {{/each}}

</ul>

<form class="create=form">

    <div class="form-group">

        <textarea id="burgerInput" rows="4" cols="40"></textarea>

    </div>

    <button type="submit">Submit</button>

</form>


<p>Enter a burger you want to eat, then click the "Submit" button.</p>